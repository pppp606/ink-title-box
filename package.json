{
  "name": "ink-title-box",
  "version": "1.0.0",
  "description": "A title box component for Ink CLI applications",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ink-title-box": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage",
    "dev": "npm run build:watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "quality": "npm run typecheck && npm run lint:check && npm run format:check",
    "quality:fix": "npm run format && npm run lint:fix && npm run typecheck",
    "precommit": "npm run quality:fix && npm run test:ci",
    "dev:start": "npm run clean && npm run build && npm run dev",
    "ci": "npm run quality && npm run build && npm run test:ci",
    "prepublishOnly": "npm run ci",
    "demo": "node demo.mjs",
    "demo:help": "node demo.mjs --help",
    "demo:custom": "node demo.mjs --title 'Custom Demo' --color green --width 60 --padding 3"
  },
  "keywords": [
    "ink",
    "cli",
    "react",
    "component",
    "title",
    "box",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "ink": "^4.4.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/string-width": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "chalk": "^5.6.2",
    "cli-boxes": "^4.0.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "ink": "^4.4.1",
    "ink-testing-library": "^4.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.0.0",
    "type-fest": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "string-width": "^8.1.0"
  }
}
